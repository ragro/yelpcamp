<% include ../partials/header %>

<div class="container">
        <div class="row">
            <h1 style="text-align:center;">Add a new CampGround</h1>
            <div style="width:30%; margin:25px auto;">  
                <form method = "POST" action = "/campgrounds">
                    <div class="form-group">        
                        <input type="text" class="form-control" name = "name" placeholder = "name">
                     </div>    
                        
                    <div class="form-group">            
                        <input type = "text" class="form-control" name = "image" placeholder = "image url">
                     </div>
                     
                     <div class="form-group">            
                        <input type = "text" class="form-control" name = "description" placeholder = "image description">
                     </div>
                     
                     
                     <div class="form-group">        
                        <input type = "submit" class="btn btn-lg btn-block btn-primary">
                    </div>
                
                    <a href="/campgrounds">Go Back</a>
                </form>
                 
            </div>
        </div>    
        
</div>

<% include ../partials/footer %>